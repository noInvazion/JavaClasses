import java.util.Scanner;

package JavaClass;

public class DataCompilation {

    Scanner sc = new Scanner(System.in);
    int age, id, salary;
    String firstName, lastName, course, dep, desig;

    void menu() {
        System.out.println("Take Student as Option 1 and Employee as Option 2.");
        System.out.println("Are you inserting as a Student or Employee (Pick 1 or 2) >> ");
        int option = sc.nextInt();

        if (option == 1) {
            new StudentCompilation();
        } else if (option == 2) {
            new EmployeeCompilation();
        } else {
            System.out.println("Invalid option. Please choose 1 or 2.");
        }
    }

    // Input methods
    void setCommonDetails() {
        System.out.println("Enter your first name>> ");
        firstName = sc.next();
        System.out.println("Enter your last name>> ");
        lastName = sc.next();
        System.out.println("Enter your age>> ");
        age = sc.nextInt();
        System.out.println("Enter your ID>> ");
        id = sc.nextInt();
    }

    void setStudentDetails() {
        System.out.println("Enter your course>> ");
        course = sc.next();
    }

    void setEmployeeDetails() {
        System.out.println("Enter your salary>> ");
        salary = sc.nextInt();
        System.out.println("Enter department>> ");
        dep = sc.next();
        System.out.println("Enter designation>> ");
        desig = sc.next();
    }

    // Output methods for verification
    void displayCommonDetails() {
        System.out.println("First Name: " + firstName);
        System.out.println("Last Name: " + lastName);
        System.out.println("Age: " + age);
        System.out.println("ID: " + id);
    }

    void displayStudentDetails() {
        System.out.println("Course: " + course);
    }

    void displayEmployeeDetails() {
        System.out.println("Salary: " + salary);
        System.out.println("Department: " + dep);
        System.out.println("Designation: " + desig);
    }

    public static void main(String[] args) {
        DataCompilation obj = new DataCompilation();
        obj.menu();
    }
}

class StudentCompilation extends DataCompilation {
    public StudentCompilation() {
        setCommonDetails();
        setStudentDetails();
        displayCommonDetails();
        displayStudentDetails();
    }
}

class EmployeeCompilation extends DataCompilation {
    public EmployeeCompilation() {
        setCommonDetails();
        setEmployeeDetails();
        displayCommonDetails();
        displayEmployeeDetails();
    }
}
