package JavaClass;

import java.util.Scanner;



public class DataCompilation {
	
	Scanner sc = new Scanner(System.in);
	int age, id, salary;
	String firstName, lastName, course, dep, desig;


	void menu() {
		System.out.println("Take Student as Option 1 and Employee as Option 2.");
		System.out.println("Are you inserting as a Student or Employee(Pick 1 or 2)>>");
		int option = sc.nextInt();
		
		if (option == 1) {
			StudentCompilation student = new StudentCompilation();
		} else if (option ==  2) {
			EmployeeCompilation employee = new EmployeeCompilation();
		}
		
	}

	void setAge(int age) {
		this.age = age;
	}
	
	void setID(int id) {
		this.id = id;
	}
	
	void setFirstName(String firstName) {
		this.firstName = firstName;
	}
	
	void setLastName(String lastName) {
		this.lastName = lastName;
	}
	
	void setCourse(String course) {
		this.course = course;
	}
	
	void setSalary(int salary) {
		this.salary = salary;
	}
	
	void setDep(String dep) {
		this.dep = dep;
	}
	
	void setDesig(String desig) {
		this.desig = desig;
	}
	
	int getAge() {
		return age;
	}
	
	int getID() {
		return id;
	}
	
	String getFirstName() {
		System.out.println("Enter your first name>>");
		return firstName;
	}
	
	String getLastName() {
		System.out.println("Enter your last name>>");
		return lastName;
	}
	
	String getCourse() {
		System.out.println("Enter your course>>");
		return course;
	}
	
	int getSalary() {
		System.out.println("Enter your salary>>");
		return salary;
	}
	
	String getDep() {
		System.out.println("Enter department>>");
		return dep;
	}
	
	String getDesig() {
		System.out.println("Enter your address>>");
		return desig;
	}
	
	void common() {
		getFirstName();
		getLastName();
		getAge();
		getID();
	}
	
	void student() {
		getCourse();
	}
	
	void emp() {
		getSalary();
		getDep();
		getDesig();
	}
	
	public static void main(String[] args) {
		DataCompilation obj = new DataCompilation();
		obj.menu();
	}
}

class StudentCompilation extends DataCompilation {
	public StudentCompilation() {
		common();
		
	}
}

class EmployeeCompilation extends StudentCompilation{
	
}
