package JavaClass;

import java.util.Scanner;



public class DataCompilation {
	
	Scanner sc = new Scanner(System.in);
	int age, id;
	String firstName, lastName;
	
	public DataCompilation() {
		menu();
	}

	void menu() {
		System.out.println("Take Student as Option 1 and Employee as Option 2.");
		System.out.println("Are you inserting as a Student or Employee(Pick 1 or 2)>>");
		int option = sc.nextInt();
		
		if (option == 1) {
			StudentCompilation student = new StudentCompilation();
		} else if (option ==  2) {
			EmployeeCompilation employee = new EmployeeCompilation();
		}
		
	}

	void setAge(int age) {
		this.age = age;
	}
	
	void setId(int id) {
		this.id = id;
	}
	
	void setFirstName(String firstName) {
		this.firstName = firstName;
	}
	
	void setLastName(String lastName) {
		this.lastName = lastName;
	}
	
	int getAge() {
		return age;
	}
	
	int getId() {
		return id;
	}
	
	String getFirstName() {
		return firstName;
	}
	
	String getLastName() {
		return lastName;
	}
}

class StudentCompilation extends DataCompilation {
	
}

class EmployeeCompilation{
	
}
